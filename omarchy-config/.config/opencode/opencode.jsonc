{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?exaApiKey={env:EXA_API_KEY}&tools=web_search_exa,get_code_context_exa",
      "enabled": true,
      "headers": {
        "Accept": "application/json, text/event-stream"
      }
    },
    "Ref": {
      "type": "remote",
      "url": "https://api.ref.tools/mcp",
      "enabled": true,
      "headers": {
        "x-ref-api-key": "{env:REF_API_KEY}"
      }
    }
  }
}

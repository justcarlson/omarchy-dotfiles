{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["oh-my-opencode"],
  "mcp": {
    "tavily": {
      "type": "remote",
      "url": "https://mcp.tavily.com/mcp/?tavilyApiKey={env:TAVILY_API_KEY}"
    },
    "Ref": {
      "type": "remote",
      "url": "https://api.ref.tools/mcp",
      "enabled": true,
      "headers": {
        "x-ref-api-key": "{env:REF_API_KEY}"
      }
    }
  }
}
